<%= form_for(@aluno) do |f| %>
  <% if @aluno.errors.any? || @aluno.endereco.errors.any? %>
    <div class="alert alert-error">
      <strong><%= pluralize(@aluno.errors.count, "erro") %> proibiu(iram) esse aluno de ser criado:</strong>

      <ul>
      <% @aluno.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%#= f.label :curso_id %><br />
    <%#= f.number_field :curso_id %>
    <%= f.label :curso_id %><br />
    <%= f.collection_select(:curso_id, @cursos, :id, :nome) %>   
  </div>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :num_matricula, "Número de matrícula" %><br />
    <%= f.text_field :num_matricula %>
  </div>
  <%= f.fields_for :endereco do |ff| %>
    <div class="field">
      <%= ff.label :cep %><br />
      <%= ff.text_field :cep, :maxlength => "8" %>
    </div>
    <div class="field">
      <%= ff.label :logradouro %><br />
      <%= ff.text_field :logradouro %>
    </div>
    <div class="field">
      <%= ff.label :numero, "Número"%><br />
      <%= ff.number_field :numero %>
    </div>
    <div class="field">
      <%= ff.label :bairro %><br />
      <%= ff.text_field :bairro %>
    </div>
    <div class="field">
      <%= ff.label :cidade %><br />
      <%= ff.text_field :cidade %>
    </div>
    <div class="field">
      <%= ff.label :estado %><br />
      <%= ff.text_field :estado, html_options = {:style => "width: 30px", :maxlength => "2"} %>
    </div>
  <% end %>
  <div class="form-actions">
    <%= f.submit "Enviar", :class => "btn btn-primary" %>
  </div>
<% end %>
