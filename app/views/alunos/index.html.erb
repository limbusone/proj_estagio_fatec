<h1>Listing alunos</h1>

<table>
  <tr>
    <th>Curso</th>
    <th>Nome</th>
    <th>Num matricula</th>
    <th>Cep</th>
    <th>Logradouro</th>
    <th>Numero</th>
    <th>Bairro</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alunos.each do |aluno| %>
  <tr>
    <td><%= aluno.curso_id %></td>
    <td><%= aluno.nome %></td>
    <td><%= aluno.num_matricula %></td>
    <td><%= aluno.endereco.cep %></td>
    <td><%= aluno.endereco.logradouro %></td>
    <td><%= aluno.endereco.numero %></td>
    <td><%= aluno.endereco.bairro %></td>
    <td><%= aluno.endereco.cidade %></td>
    <td><%= aluno.endereco.estado %></td>
    <td><%= link_to 'Show', aluno %></td>
    <td><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
    <td><%= link_to 'Destroy', aluno, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

