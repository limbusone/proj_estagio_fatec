<h1>Lista de TCEs</h1>
<br />
<h2>TCEs em aberto</h2>
<table class="table table-striped">
  <tr>
    <th>Aluno</th>
    <th>Curso</th>
    <th>Concedente</th>
    <th>Interveniente</th>
    <th>Rescidido</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @tces_nv.each do |tce| %>
  <tr>
    <td><%= tce.aluno.nome.upcase %></td>
    <td><%= tce.aluno.curso.sigla%></td>
    <td><%= tce.convenio.concedente.nome %></td>
    <td><%= tce.convenio.interveniente.nome %></td>
    <td><%= tce.rescidido %></td>
    <td><%= link_to 'Ver', tce %></td>
    <!--<td><%#= link_to 'Editar', edit_tce_path(tce) %></td>-->
    <td>
      <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          Editar
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <% 
            vh = tce.detalhe_termo.hora_dias.empty? 
            va = tce.detalhe_termo.lista_atividades.empty?
          %>
          <li><%= link_to 'Dados Gerais', edit_tce_path(tce) %></li>
          <li><%= link_to 'Hor치rio de trabalho', "/tces/#{tce.detalhe_termo_id}/editHorasDias" if (!(vh)) %></li>
          <li><%= link_to 'Atividades', "/tces/#{tce.detalhe_termo_id}/editListaAtividades" if (!(va))%></li>
          <% if (vh || va)%>
            <li class='divider'></li>
          <% end %>
          <% if (vh)%>
            <li><%= link_to 'Criar Hor치rio de trabalho', "/tces/#{tce.detalhe_termo_id}/newHorasDias" %></li>
          <% end %>
          <% if (va)%>
            <li><%= link_to 'Criar Lista de atividades', "/tces/#{tce.detalhe_termo_id}/newListaAtividades" %></li>
          <% end %>          
        </ul>
      </div>      
    </td>  
    <td><%= link_to 'Deletar', tce, confirm: 'Tem certeza?', method: :delete, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>
