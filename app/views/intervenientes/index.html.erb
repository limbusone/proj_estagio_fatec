<h1>Lista de Intervenientes</h1>

<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Cnpj</th>
    <th>Telefone</th>
    <th>Email</th>
    <th>Cep</th>
    <th>Logradouro</th>
    <th>Numero</th>
    <th>Bairro</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @intervenientes.each do |interveniente| %>
  <tr>
    <td><%= interveniente.nome %></td>
    <td><%= interveniente.cnpj %></td>
    <td><%= interveniente.telefone %></td>
    <td><%= interveniente.email %></td>
    <td><%= interveniente.endereco.cep %></td>
    <td><%= interveniente.endereco.logradouro %></td>
    <td><%= interveniente.endereco.numero %></td>
    <td><%= interveniente.endereco.bairro %></td>
    <td><%= interveniente.endereco.cidade %></td>
    <td><%= interveniente.endereco.estado %></td>
    <td><%= link_to 'Ver', interveniente %></td>
    <td><%= link_to 'Editar', edit_interveniente_path(interveniente) %></td>
    <td><%= link_to 'Deletar', interveniente, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

