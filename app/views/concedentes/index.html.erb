<h1>Lista de Concedentes</h1>

<table class="table table-striped">
  <tr>
    <th>Nome</th>
    <th>Cnpj</th>
    <th>Telefone</th>
    <th>Email</th>
    <th>Cep</th>
    <th>Logradouro</th>
    <th>Numero</th>
    <th>Bairro</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concedentes.each do |concedente| %>
  <tr>
    <td><%= concedente.nome %></td>
    <td><%= concedente.cnpj %></td>
    <td><%= concedente.telefone %></td>
    <td><%= concedente.email %></td>
    <td><%= concedente.endereco.cep %></td>
    <td><%= concedente.endereco.logradouro %></td>
    <td><%= concedente.endereco.numero %></td>
    <td><%= concedente.endereco.bairro %></td>
    <td><%= concedente.endereco.cidade %></td>
    <td><%= concedente.endereco.estado %></td>
    <td><%= link_to 'Ver', concedente %></td>
    <td><%= link_to 'Editar', edit_concedente_path(concedente) %></td>
    <td><%= link_to 'Deletar', concedente, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

