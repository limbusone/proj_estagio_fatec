<%= form_for(@concedente) do |f| %>
  <% if @concedente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@concedente.errors.count, "error") %> prohibited this concedente from being saved:</h2>
      <h2><%= pluralize(@concedente.endereco.errors.count, "error") %> prohibited this concedente from being saved:</h2>
      <ul>
      <% @concedente.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      <% @concedente.endereco.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :cnpj %><br />
    <%= f.text_field :cnpj %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br />
    <input id="concedente_telefone_com_mascara" type="text" value="" size="30">
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <%= f.fields_for :endereco do |ff| %>
    <div class="field">
      <%= ff.label :cep %><br />
      <%= ff.text_field :cep %>
    </div>
    <div class="field">
      <%= ff.label :logradouro %><br />
      <%= ff.text_field :logradouro %>
    </div>
    <div class="field">
      <%= ff.label :numero %><br />
      <%= ff.number_field :numero %>
    </div>
    <div class="field">
      <%= ff.label :bairro %><br />
      <%= ff.text_field :bairro %>
    </div>
    <div class="field">
      <%= ff.label :cidade %><br />
      <%= ff.text_field :cidade %>
    </div>
    <div class="field">
      <%= ff.label :estado %><br />
      <%= ff.text_field :estado %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
